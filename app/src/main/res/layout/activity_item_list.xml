<?xml version="1.0" encoding="utf-8"?>
<com.scwang.smartrefreshlayout.SmartRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:srlEnableHeaderTranslationContent="true"
    app:srlPrimaryColor="@color/colorPrimary"
    app:srlAccentColor="#ffffff"
    tools:context="com.scwang.refreshlayout.ItemActivity">
    <com.scwang.smartrefreshheader.WaterDropHeader
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <ListView
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:listitem="@layout/fragment_item" />

</com.scwang.smartrefreshlayout.SmartRefreshLayout>
